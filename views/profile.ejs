<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <% include ./elements/meta %>
</head>

<body>
  <% include ./elements/navbar %>
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Cập nhật thông tin</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-12 col-lg-12 col-md-12">
              <form method="POST" class="tm-edit-product-form">
                <div class="form-group mb-3">
                  <label for="name">Họ & Tên</label>
                  <input id="name" name="name" type="text" value="<%= admin.name %>" class="form-control validate" />
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="email">Email</label>
                    <input id="email" name="email" type="text" value="<%= admin.email %>" class="form-control validate"
                      data-large-mode="true" />
                  </div>
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="phone">Số điện thoại</label>
                    <input id="phone" name="phone" type="text" value="<%= admin.phone %>" class="form-control validate" />
                  </div>
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="DoB">Ngày sinh</label>
                    <input id="DoB" name="DoB" type="text" value="<%= day %>/<%= month %>/<%= year %>" class="form-control validate" />
                  </div>
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="gender">Giới tính</label>
                    <select class="custom-select tm-select-accounts" id="gender" name="gender">
                      <option value="true" <%= (admin.gender) ? 'selected' : '' %>>Nam</option>
                      <option value="false" <%= (!admin.gender) ? 'selected' : '' %>>Nữ</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="col-6">
                    <a href="/" class="btn btn-primary btn-block text-uppercase">Hủy</a>
                  </div>
                  <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-block text-uppercase">Cập nhật</button>
                  </div>
                </div>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ./elements/footer %>

  <% include ./elements/scripts %>
</body>

</html>
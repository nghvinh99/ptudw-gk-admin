<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <% include ../../elements/meta %>
</head>

<body>
  <% include ../../elements/navbar %>
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Thêm sản phẩm</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <form action="" class="tm-edit-product-form">
                <div class="form-group mb-3">
                  <label for="name">Tên sản phẩm
                  </label>
                  <input id="name" name="name" type="text" class="form-control validate" required />
                </div>
                <div class="form-group mb-3">
                  <label for="description">Mô tả</label>
                  <textarea class="form-control validate" rows="3" required></textarea>
                </div>
                <div class="form-group mb-3">
                  <label for="category">Phân loại</label>
                  <select class="custom-select tm-select-accounts" id="category">
                    <option selected>Chọn loại</option>
                    <option value="1">Hàng mới</option>
                    <option value="2">Hàng phổ biến</option>
                    <option value="3">Xu hướng</option>
                    <option value="4">Thời trang nam</option>
                    <option value="5">Thời trang nữ</option>
                    <option value="6">Phụ kiện</option>
                    <option value="7">Giày</option>
                    <option value="8">Mũ</option>
                  </select>
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="expire_date">Hạn sử dụng
                    </label>
                    <input id="expire_date" name="expire_date" type="text" class="form-control validate"
                      data-large-mode="true" />
                  </div>
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="stock">Số lượng trong kho
                    </label>
                    <input id="stock" name="stock" type="text" class="form-control validate" required />
                  </div>
                </div>

            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"
                  onclick="document.getElementById('fileInput').click();"></i>
              </div>
              <div class="custom-file mt-3 mb-3">
                <input id="fileInput" type="file" style="display:none;" />
                <input type="button" class="btn btn-primary btn-block mx-auto" value="CHỌN ẢNH SẢN PHẨM"
                  onclick="document.getElementById('fileInput').click();" />
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm sản phẩm</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ../../elements/footer %>

  <% include ../../elements/scripts %>
</body>

</html>
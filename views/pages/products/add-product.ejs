<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <% include ../../elements/meta %>
</head>

<body>
  <% include ../../elements/navbar %>
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Thêm sản phẩm</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12">
              <form method="POST" enctype="multipart/form-data" class="tm-edit-product-form">
                <div class="form-group mb-3">
                  <label for="name">Tên sản phẩm
                  </label>
                  <input id="name" name="name" type="text" autocomplete="off" class="form-control validate" required/>
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="price">Giá
                    </label>
                    <input id="price" name="price" min="0" type="number" autocomplete="off" class="form-control validate" data-large-mode="true" required/>
                  </div>
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <label for="quantity">Số lượng trong kho
                    </label>
                    <input id="quantity" name="quantity" min="0" type="number" autocomplete="off" class="form-control validate" required/>
                  </div>
                </div>
                <div class="form-group mb-3">
                  <label for="group">Phân nhóm</label>
                  <select class="custom-select tm-select-accounts" id="group" name="group" required>
                    <option value="" selected>Chọn nhóm</option>
                    <% group.forEach((group) => {%>
                    <option value=<%= group.id %>><%= group.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group mb-3">
                  <label for="type">Phân loại</label>
                  <select class="custom-select tm-select-accounts" id="type" name="type" required>
                    <option value="" selected>Chọn loại</option>
                    <% type.forEach((type) => {%>
                    <option value=<%= type.id %>><%= type.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group mb-3">
                  <label for="brand">Hãng sản xuất</label>
                  <select class="custom-select tm-select-accounts" id="brand" name="brand" required>
                    <option value="" selected>Chọn hãng</option>
                    <% brand.forEach((brand) => {%>
                    <option value=<%= brand.id %>><%= brand.name %></option>
                    <% }) %>
                  </select>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"
                  onclick="document.getElementById('productImage').click();"></i>
              </div>
              <div class="custom-file mt-3 mb-3">
                <input id="productImage" name="productImage" type="file" style="display:none" oninvalid="alert('Chọn ít nhất một ảnh cho sản phẩm');" multiple>
                <input type="button" class="btn btn-primary btn-block mx-auto" value="CHỌN ẢNH SẢN PHẨM" id="alterUploadBtn"
                  onclick="document.getElementById('productImage').click();"/>
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase">
                Thêm sản phẩm</button>
            </div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  <% include ../../elements/footer %>

  <% include ../../elements/scripts %>
</body>

</html>